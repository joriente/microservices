{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "ProductOrderingSystem",
    "Audience": "ProductOrderingSystem.Services",
    "ExpiresInMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "identity-service": {
        "ClusterId": "identity-service-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "product-service": {
        "ClusterId": "product-service-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "order-service": {
        "ClusterId": "order-service-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "cart-service": {
        "ClusterId": "cart-service-cluster",
        "Match": {
          "Path": "/api/carts/{**catch-all}"
        }
      },
      "payment-service": {
        "ClusterId": "payment-service-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        }
      },
      "customer-service": {
        "ClusterId": "customer-service-cluster",
        "Match": {
          "Path": "/api/customers/{**catch-all}"
        }
      },
      "inventory-service": {
        "ClusterId": "inventory-service-cluster",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://identity-service"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "product-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://product-service"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "order-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://order-service"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "cart-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://cart-service"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "payment-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://payment-service"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "customer-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://customer-service"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "inventory-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://inventory-service"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      }
    }
  }
}
