    <MudNavLink Href="/products" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Inventory">Products</MudNavLink>
    <MudNavLink Href="/cart" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ShoppingCart">Cart</MudNavLink>
    
    <AuthorizeView>
