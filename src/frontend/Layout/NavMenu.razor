                    <MudNavLink Href="/admin/inventory" Icon="@Icons.Material.Filled.Warehouse">Manage Inventory</MudNavLink>
                    <MudNavLink Href="/admin/orders" Icon="@Icons.Material.Filled.ShoppingBag">View Orders</MudNavLink>
                    <MudNavLink Href="/admin/customers" Icon="@Icons.Material.Filled.People">View Customers</MudNavLink>
                </MudNavGroup>
            </AuthorizeView>
        </Authorized>
